<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PumpItUp"
        tools:targetApi="31">
        <activity
            android:name=".activities.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".activities.Driving101Activity"
            android:exported="false" />
        <activity
            android:name=".activities.PumpMapActivity"
            android:exported="false"
            android:label="@string/title_activity_pump_map"
            android:theme="@style/Theme.PumpItUp.NoActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".activities.MapActivity"
            android:exported="true"
            android:label="@string/title_activity_map" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="@string/title_pump_activity_main" />
        <activity
            android:name=".activities.PumpListActivity"
            android:exported="true"
            android:label="@string/title_pump_activity_list">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">

        </activity>

        <meta-data
            android:name="android.app.lib_name"
            android:value="" />
    </application>

</manifest>