<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:radius="10dp"
    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"
            android:layout_gravity="left"
            app:srcCompat="@drawable/pump" />

        <TextView
            android:id="@+id/station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            tools:text="Station Name" />

        <TextView
            android:id="@+id/petrol_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/station_name"
            android:textSize="25sp"
            tools:text="Petrol Price" />

        <TextView
            android:id="@+id/diesel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/petrol_price"
            android:textSize="25sp"
            tools:text="Diesel Price" />

        <TextView
            android:id="@+id/eircode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/diesel_price"
            android:textSize="20sp"
            tools:text="Eircode" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eircode"
            android:textSize="20sp"
            tools:text="address" />

        <TextView
            android:id="@+id/delete_txt"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="55dp"
            android:padding="15dp"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:visibility="invisible" />

        />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
